{
  "name": "machinery-rental-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H localhost -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:seed": "ts-node --project prisma/tsconfig.json prisma/seed.ts",
    "postinstall": "prisma generate --no-engine",
    "db:clean": "npx tsx scripts/ops-behavior-smoke.ts --blank",
    "build:ci": "next build --no-lint",
    "test": "vitest",
    "test:unit": "vitest",
    "test:integration": "dotenv -e .env.e2e.local -- vitest run tests/integration",
    "test:ci": "vitest run",
    "test:e2e": "playwright test --project=chromium",
    "dev:netlify": "npx netlify dev --port 8888",
    "dev:next": "next dev -p 3000",
    "dev:all": "run-p dev:netlify",
    "test:e2e:all": "dotenv -e .env.e2e.local -- playwright test --project=chromium --reporter=html,line",
    "test:e2e:all:clean": "npm run db:clean && npm run test:e2e:all"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@netlify/functions": "^4.2.5",
    "@prisma/client": "^6.14.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@react-email/components": "^0.5.1",
    "@react-email/render": "^1.2.1",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "csv-parse": "^6.1.0",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.540.0",
    "next": "^14.2.32",
    "react-day-picker": "^9.9.0",
    "react-hook-form": "^7.62.0",
    "resend": "^6.0.2",
    "sharp": "^0.34.4",
    "stripe": "^18.5.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@testcontainers/postgresql": "^11.5.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.19.13",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.2.2",
    "dotenv-cli": "^10.0.0",
    "netlify-cli": "^23.5.1",
    "pg": "^8.16.3",
    "prisma": "^6.14.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^4",
    "tailwindcss-animate": "^1.0.7",
    "testcontainers": "^11.5.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
