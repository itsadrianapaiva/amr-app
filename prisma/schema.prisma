// Define database connection
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define Prisma Client generator
generator client {
  provider = "prisma-client-js"
}

// Machine model with new fields
model Machine {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  description     String
  imageUrl        String
  dailyRate       Decimal
  weight          String    // New field
  deposit         Decimal   // New field
  deliveryCharge  Decimal   // New field
  bookings        Booking[]
}

// Booking model with new insurance field
model Booking {
  id                    Int           @id @default(autoincrement())
  machineId             Int
  machine               Machine       @relation(fields: [machineId], references: [id])
  startDate             DateTime
  endDate               DateTime
  insuranceSelected     Boolean       @default(false)
  customerName          String
  customerEmail         String
  customerPhone         String
  customerNIF           String?
  totalCost             Decimal
  depositPaid           Boolean       @default(false)
  stripePaymentIntentId String?       @unique
  googleCalendarEventId String?
  status                BookingStatus @default(PENDING)
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}