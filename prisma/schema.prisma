// Define database connection
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define Prisma Client generator
generator client {
  provider = "prisma-client-js"
}

model Machine {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  type            String   @default("Uncategorized")
  description     String
  imageUrl        String
  dailyRate       Decimal
  weight          String    
  deposit         Decimal   
  deliveryCharge  Decimal?
  pickupCharge    Decimal?  
  minDays         Int       @default(1)
  bookings        Booking[]
}

model Booking {
  id                    Int           @id @default(autoincrement())
  machineId             Int
  machine               Machine       @relation(fields: [machineId], references: [id])

  startDate             DateTime
  endDate               DateTime

  // Selected at checkout
  insuranceSelected     Boolean       @default(true)
  deliverySelected      Boolean       @default(true)
  pickupSelected        Boolean       @default(true)
  operatorSelected   Boolean          @default(false)

  // Customer details
  customerName          String
  customerEmail         String
  customerPhone         String
  customerNIF           String?

  /// Operational site address (NOT for invoicing)
  siteAddressLine1      String?
  siteAddressPostalCode String?
  siteAddressCity       String?
  siteAddressNotes      String?

  // Business invoicing fields (optional)
  billingIsBusiness     Boolean         @default(false)
  billingCompanyName    String?
  billingTaxId          String?
  billingAddressLine1   String?
  billingPostalCode     String?
  billingCity           String?
  billingCountry        String?

  // Payment and ops
  totalCost             Decimal
  depositPaid           Boolean       @default(false)
  stripePaymentIntentId String?       @unique
  googleCalendarEventId String?

  status                BookingStatus @default(PENDING)
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}