# -----------------------------
# URLs (local dev only; Netlify sets URL/DEPLOY_* in cloud)
# -----------------------------
# Preferred absolute site URL for production. Used in prod only after header binding.
APP_URL=
# Public base used by the browser. Usually same as APP_URL in prod.
NEXT_PUBLIC_APP_URL=
# Optional helper for local conventions.
STAGING_URL=

# Netlify provides these in cloud. Do not set locally unless you are simulating.
# URL=
# DEPLOY_URL=
# DEPLOY_PRIME_URL=
# CONTEXT= # production | branch-deploy | deploy-preview

# Hosts considered production for link safety. Comma separated.
PROD_HOSTS=amr-rentals.com,www.amr-rentals.com

# -----------------------------
# Stripe (server vs browser)
# -----------------------------
# Server-only secret key (sk_*). TEST in staging/preview. LIVE in production.
STRIPE_SECRET_KEY=
# Browser-safe publishable key (pk_*).
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
# Webhook signing secret (whsec_*). Unique per endpoint URL.
STRIPE_WEBHOOK_SECRET=
# CLI webhook signing secret from `stripe listen --forward-to localhost:3000/api/stripe/webhook`.
STRIPE_CLI_WEBHOOK_SECRET=
# Fixed PT VAT 23% tax rate id in your Stripe account (test/live variant).
STRIPE_TAX_RATE_PT_STANDARD=

# -----------------------------
# Operational toggles / security
# -----------------------------
# For dev seed scripts (0/1). Keep empty in production.
SEED_RESET=
# For smoke tests and dev routes (non-secret sample token).
SMOKE_TEST_KEY=
# Cron shared secret.
CRON_SECRET=
# E2E test secret for protected routes.
E2E_SECRET=
# Payment E2E toggle.
RUN_PAYMENT_E2E=
# Signed link secret for invoice proxy. Use a long random string. Unique per env.
INVOICING_LINK_SECRET=
# Optional kill switch for the invoice proxy. If "false", proxy returns 503.
INVOICE_PROXY_ENABLED=true
# Optional link TTL override in seconds. If unset, defaults come from code (72h prod, shorter in staging if you choose).
INVOICE_LINK_TTL_SECONDS=

# -----------------------------
# Ops flags
# To keep prod safe while ops is in development.
# -----------------------------
OPS_DASHBOARD_ENABLED=
OPS_DISABLE_AUTH=
AUTH_COOKIE_SECRET=
OPS_EXEC_HASH=
OPS_MANAGERS_HASH=
OPS_SESSION_TTL_SECONDS=604800
# Optional, reserved for future Ops mutations
OPS_KEY=
# Protects /ops actions.
OPS_PASSCODE=

# -----------------------------
# Database (server-only)
# -----------------------------
DATABASE_URL=

# -----------------------------
# Email / Resend
# -----------------------------
RESEND_API_KEY=
# "true" to send real emails in that environment. Leave blank/false for dry runs.
SEND_EMAILS=
EMAIL_FROM=noreply@amr-rentals.com
EMAIL_REPLY_TO=support@amr-rentals.com
EMAIL_ADMIN_TO=
ADMIN_TO=

# -----------------------------
# Public contact info (browser-visible)
# -----------------------------
NEXT_PUBLIC_SUPPORT_EMAIL=support@amr-rentals.com
NEXT_PUBLIC_WHATSAPP_NUMBER=+351934014611

# -----------------------------
# Company info (server-only unless UI needs it)
# Mirror with NEXT_PUBLIC_* if read by the browser.
# -----------------------------
COMPANY_NAME="Algarve Machinery Rental"
COMPANY_LEGAL_NAME="Algarve Modern Rentals and Services - Aluguer de Equipamentos, Unipessoal Lda"
COMPANY_WEBSITE="https://amr-rentals.com"
COMPANY_LEGAL_ADDRESS="Espartal, lote I 13, 8670-119, Aljezur, Portugal"
COMPANY_NIF="517530937"
SUPPORT_EMAIL="support@amr-rentals.com"
SUPPORT_PHONE="(+351) 934 014 611"
WAREHOUSE_ADDRESS="Barranco da Vaca, 8670-116, Aljezur, Portugal"
WAREHOUSE_HOURS="Mo-Fr 09:00-17:00"

# -----------------------------
# Maps / Geofence
# -----------------------------
ENABLE_GEOFENCE=true
MAPBOX_ACCESS_TOKEN=

# -----------------------------
# Vendus (server-only)
# -----------------------------
# Single API key. We authenticate as HTTP Basic with apiKey as username and empty password.
VENDUS_API_KEY=
VENDUS_URL=https://www.vendus.pt/ws/
# Optional; leave blank to auto-discover via API.
VENDUS_REGISTER_ID=
# Use "tests" for staging. Use "normal" for production.
VENDUS_MODE=tests
# Document type to issue by default (PF, FR, FT). Leave blank to use code-level default.
INVOICE_DOC_TYPE=
# Toggle invoicing flow. If blank or "false", issuance is skipped.
INVOICE_ENABLED=true
# Rare fallback: set to "1" to also append ?api_key=... on PDF GETs.
VENDUS_FORCE_QUERY_AUTH=

# -----------------------------
# Ads / SEO
# -----------------------------
# Public site URL used by the frontend for canonical links and structured data.
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_ENV=development

# -----------------------------
# Google Ads
# Set in prod, keep blank in staging.
# -----------------------------
# Production only:
NEXT_PUBLIC_GA4_ID= # G-XXXXXXXXXX
# Optional; only if you import Google Ads
NEXT_PUBLIC_GADS_ID= # AW-XXXXXXXXXX

